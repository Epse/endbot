{
	"compilerOptions": {
		"experimentalDecorators": true,
		"module": "commonjs",
		"target": "es6",
		"sourceMap": true,
		"strict": true,
		"alwaysStrict": true,
		"incremental": true,
		"skipLibCheck": true,
		"moduleResolution": "Node",
		"declaration": true,
		"composite": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true
	},
	"exclude": [
		"node_modules",
		"**/dist"
	]
}